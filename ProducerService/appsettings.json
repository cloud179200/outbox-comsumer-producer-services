{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ProducerService": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=outbox_db;Username=outbox_user;Password=outbox_password",
    "Kafka": "localhost:9092"
  },
  "ConsumerService": {
    "BaseUrl": "http://localhost:5287"
  },
  "OutboxProcessor": {
    "ProcessingIntervalMs": 5000,
    "RetryIntervalMs": 30000,
    "BatchSize": 100,
    "RetryTimeoutMinutes": 30,
    "MaxRetries": 3
  },
  "ConsumerGroups": [
    "default-consumer-group",
    "analytics-group",
    "notification-group"
  ]
}
