{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=outbox_db;Username=outbox_user;Password=outbox_password",
    "Kafka": "localhost:9092"
  },
  "ProducerService": {
    "BaseUrl": "http://localhost:5299"
  },
  "ConsumerGroups": [
    {
      "GroupName": "default-consumer-group",
      "Topics": ["user-events", "order-events"]
    },
    {
      "GroupName": "analytics-group",
      "Topics": ["analytics-events"]
    },
    {
      "GroupName": "notification-group",
      "Topics": ["notification-events"]
    }
  ]
}
